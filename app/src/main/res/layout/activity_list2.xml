<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".List2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/hamil" />
    </LinearLayout>

    <TextView
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:text="Nutrisi yang bagus buat ibu hamil"
        android:textColor="#1C1C1C"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:text="Nutrisi yang baik untuk janin ini meliputi sayur, buah, telur, daging, susu, dan biji-bijian. Makanan ini kaya asam folat, vitamin, mineral, zat besi, omega-3, serat, protein, dan kolin."
            android:textColor="#1C1C1C"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            android:layout_height="match_parent">

        </TextView>
    </LinearLayout>

</LinearLayout>